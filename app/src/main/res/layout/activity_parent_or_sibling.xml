<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="skripsi.ubm.studenttracking.ParentOrSibling"
    android:background="@mipmap/bg4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal|top"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Parent or Sibling"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="45dp"
        android:textSize="25dp"
        android:textStyle="italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtName2"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dp"
        android:hint="Your parent or sibling name"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtPhone2"
        android:layout_gravity="left|top"
        android:layout_marginTop="145dp"
        android:hint="Your parent or sibling phone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtEmail2"
        android:layout_gravity="left|top"
        android:layout_marginTop="190dp"
        android:hint="Your parent or sibling email address" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="&lt;     Back"
        android:id="@+id/cmdBack"
        android:layout_gravity="left|top"
        android:layout_marginTop="410dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Next     >"
        android:id="@+id/cmdNext"
        android:layout_gravity="left|top"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="180dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtAddress2"
        android:layout_gravity="left|top"
        android:layout_marginTop="235dp"
        android:hint="Your parent or sibling home address"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_gravity="left|top"
        android:layout_marginTop="325dp"
        android:hint="Password"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtConfirmPassword"
        android:layout_gravity="left|top"
        android:layout_marginTop="370dp"
        android:hint="Confirm password"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please note accordingly for whose fill these form is only your parent or sibling"
        android:id="@+id/textView6"
        android:layout_gravity="left|top"
        android:textStyle="italic"
        android:layout_marginTop="455dp" />
</FrameLayout>
