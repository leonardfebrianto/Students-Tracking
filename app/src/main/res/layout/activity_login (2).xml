<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="skripsi.ubm.studenttracking.LoginActivity"
    android:background="@mipmap/bg4">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Students Tracking"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to"
        android:id="@+id/textView"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top" />

    <Button
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/cmdLogin"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/cmdRegister"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />

    <AutoCompleteTextView android:id="@+id/txtId" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="ID"
        android:inputType="textEmailAddress" android:maxLines="1"
        android:singleLine="true"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp" />

    <EditText android:id="@+id/txtPassword" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1" android:singleLine="true"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>



